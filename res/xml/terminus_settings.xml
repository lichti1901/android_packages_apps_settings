<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/terminus_settings_title" >

        <PreferenceScreen
                android:key="status_bar"
                android:fragment="com.android.settings.terminus.StatusBarSettings"
                android:title="@string/status_bar_title" />

        <PreferenceScreen
                android:key="navigation_bar"
                android:fragment="com.android.settings.terminus.NavigationBarSettings"
                android:title="@string/navigation_bar_title" />

        <PreferenceScreen
                android:key="volume_keys_settings"
                android:title="@string/volume_keys_title"
                android:persistent="false"
                android:fragment="com.android.settings.terminus.VolumeKeys" />

        <PreferenceScreen
                android:key="lockscreen_shortcuts_settings"
                android:fragment="com.android.settings.terminus.LockscreenShortcuts"
                android:title="@string/lockscreen_targets_message" />

        <PreferenceScreen
                android:key="display_settings"
                android:fragment="com.android.settings.terminus.DisplaySettings"
                android:title="@string/display_settings_title" />

        <PreferenceScreen
                android:id="@+id/app_circle_sidebar"
                android:title="@string/app_circle_bar_title"
                android:fragment="com.android.settings.terminus.AppCircleSidebar" />

        <PreferenceScreen
                android:key="privacy_guard_manager"
                android:fragment="com.android.settings.terminus.privacyguard.PrivacyGuardManager"
                android:title="@string/privacy_guard_manager_title" />

        <PreferenceScreen
                android:key="hfm_settings"
                android:title="@string/hfm_pref_screen_title"
                android:fragment="com.android.settings.terminus.hfm.HfmSettings" />

        <PreferenceScreen
                android:key="wakelock_blocker"
                android:fragment="com.android.settings.terminus.WakeLockBlocker"
                android:title="@string/wakelock_blocker_title" />

</PreferenceScreen>
